<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorAliceBlue"
    android:weightSum="1">

    <AutoCompleteTextView
        android:id="@+id/name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="name"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@android:color/holo_red_dark"
        android:textColorHint="?android:attr/textColorLinkInverse">
        <requestFocus />
    </AutoCompleteTextView>

    <EditText
        android:id="@+id/barcode_edittext"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:ems="10"
        android:hint="bar code"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:textColor="?attr/actionModeSplitBackground"
        android:textColorHint="?android:attr/textColorLinkInverse">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nomnum_edittext"
        android:hint="nomenclature num"
        android:textColor="?attr/actionModeSplitBackground"
        android:textColorHint="?android:attr/textColorLinkInverse" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/artic_edittext"
        android:hint="articular num"
        android:textColorHint="?android:attr/textColorLinkInverse"
        android:textColor="?attr/colorPrimaryDark" />

    <EditText
        android:id="@+id/price_edittext"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="price"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:textColor="?attr/actionModeSplitBackground"
        android:textColorHint="?android:attr/textColorLinkInverse">
    </EditText>
    <EditText
        android:id="@+id/packtype_edittext"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="package type"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="?android:attr/textColorLinkInverse">
    </EditText>
    <EditText
        android:id="@+id/amount_edittext"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="amount"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHint="?android:attr/textColorLinkInverse">
    </EditText>
    <EditText
        android:id="@+id/vendor_edittext"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="vendor"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHint="?android:attr/textColorLinkInverse">
    </EditText>

    <CheckBox
        android:text="add to Incoming"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox1"
        />

    <Button
        android:id="@+id/btn_addrecord"
        android:layout_width="120dp"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:text="add_record"
        android:textColor="@color/colorPrimaryDark"
        android:soundEffectsEnabled="?attr/isLightTheme"
        android:textColorLink="?android:attr/textColorHighlightInverse"
        android:onClick="addItem"
        tools:background="@color/colorAntiqueWhite"
        android:layout_weight="0.45" />

</LinearLayout>